[Unit]
Description=ago control Data Logger

[Service]
Environment=MPLCONFIGDIR=/etc/opt/agocontrol/
ExecStart=/opt/agocontrol/bin/agodatalogger.py
WorkingDirectory=/opt/agocontrol/bin
StandardOutput=syslog
StandardError=syslog
Restart=always
RestartSec=2
User=agocontrol

[Install]
WantedBy=multi-user.target
